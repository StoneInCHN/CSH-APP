<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:endColor="@color/emergency_color" android:startColor="@color/emergency_color" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <gradient android:endColor="@color/emergency_color" android:startColor="@color/emergency_color" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape android:shape="oval">
            <gradient android:endColor="@color/hit_light_gray" android:startColor="@color/hit_light_gray" />
        </shape>
    </item>

</selector>