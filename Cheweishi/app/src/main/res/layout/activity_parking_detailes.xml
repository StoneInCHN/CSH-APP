<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/title" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_marging"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginRight="@dimen/normal_marging"
                android:layout_marginTop="@dimen/large_marging"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/car_detailes_iv_location"
                        android:layout_width="@dimen/park_details_img_size"
                        android:layout_height="@dimen/park_details_img_size"
                        android:src="@drawable/zhaochewei_img" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|top">

                        <TextView
                            android:id="@+id/tvcar_detaileslocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black_colcor"
                            android:textSize="@dimen/title__text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.cheweishi.android.widget.FontAwesomeView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/two_dp_padding"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/icon_destination"
                            android:textColor="@color/gray_pressed"
                            android:textSize="@dimen/ttf_twelve" />

                        <TextView
                            android:id="@+id/car_detailes_xlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/gray_normal"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.cheweishi.android.widget.FontAwesomeView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/two_dp_padding"
                            android:gravity="center"
                            android:text="@string/icon_arrow"
                            android:textColor="@color/gray_pressed"
                            android:textSize="@dimen/ttf_twelve" />

                        <TextView
                            android:id="@+id/car_detailes_tv_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/gray_normal"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/findcar_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginTop="@dimen/normal_marging"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:gravity="center"
                        android:text="@string/icon_park"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_sixteen" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/chewei"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvcar_detailes_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/park_text_padding"
                    android:layout_marginStart="@dimen/park_text_padding"
                    android:layout_marginTop="@dimen/normal_marging"
                    android:textColor="@color/text_black_colcor"
                    android:textSize="@dimen/key_text_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginRight="@dimen/normal_marging"
                android:layout_marginTop="@dimen/large_marging"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:gravity="center"
                        android:text="@string/icon_yuan"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_sixteen" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/details_charges"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/normal_marging"
                    android:layout_marginLeft="@dimen/park_text_padding"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_marginStart="@dimen/park_text_padding"
                    android:layout_marginTop="@dimen/normal_marging">

                    <TextView
                        android:id="@+id/tvcar_detailes_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_colcor"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_large_marging"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/car_detailes_lin_yuyue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_weight="0.5"
                    android:background="@drawable/findcar_button_not"
                    android:gravity="center"
                    android:paddingTop="@dimen/normal_padding"
                    android:paddingBottom="@dimen/normal_padding"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:text="@string/icon_net_phone"
                        android:gravity="bottom"
                        android:textColor="@color/gray_pressed"
                        android:textSize="@dimen/item_content_size" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yuyue"
                        android:textColor="@color/gray_pressed"
                        android:textSize="@dimen/item_content_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_detailes_lin_daozhequ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_weight="0.5"
                    android:background="@drawable/findcar_button_not"
                    android:gravity="center"
                    android:paddingTop="@dimen/normal_padding"
                    android:paddingBottom="@dimen/normal_padding"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:text="@string/icon_goToThisPlace"
                        android:gravity="bottom"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_thirteen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daozhequ"
                        android:textSize="@dimen/item_content_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>