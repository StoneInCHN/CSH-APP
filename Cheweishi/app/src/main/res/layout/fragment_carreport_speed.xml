<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:layout_marginTop="@dimen/normal_marging"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/left_zhanwei"
                        android:layout_width="@dimen/normal_marging"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_top_left_bottom"
                        android:gravity="center"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/home_car_text_size" />

                    <LinearLayout
                        android:id="@+id/colorRemind"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/normal_marging"
                        android:background="@color/gray_backgroud"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal"></LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/chatLeftLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/colorRemind"
                        android:layout_marginLeft="@dimen/normal_marging">

                        <HorizontalScrollView
                            android:id="@+id/noneView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true"
                            android:overScrollMode="never"
                            android:scrollbars="none">

                            <FrameLayout
                                android:id="@+id/chatLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"></FrameLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:id="@+id/tv_imgRemind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/home_car_text_size"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cover_relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></RelativeLayout>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <ListView
                        android:id="@+id/speedListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/normal_marging"
                        android:layout_marginTop="@dimen/normal_marging"
                        android:layout_weight="5"
                        android:background="@color/item_back"
                        android:divider="@color/white"
                        android:dividerHeight="1dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <RelativeLayout
                        android:id="@+id/cover_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/normal_marging"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/yuanjiao" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_noSpeedData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/car_report_no_data"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/titile_side_text_size"
                android:visibility="gone" />
        </RelativeLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            layout="@layout/car_report_bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>

</LinearLayout>