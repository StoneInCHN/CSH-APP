<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_user_icon"
                android:layout_width="@dimen/user_icon_width"
                android:layout_height="@dimen/user_icon_width"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="暴走萝莉" />

                <LinearLayout
                    android:id="@+id/ll_myRanking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_myRanking"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="排名"
                        android:textColor="@color/orange_text_color" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="里程积分" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="里程积分"
                    android:textColor="@color/orange_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="反费" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:id="@+id/tv_returnMoney"
                    android:text="里程积分"
                    android:textColor="@color/orange_text_color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_starRanking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/star_ranking"
            android:textSize="@dimen/titile_side_text_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_carManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/car_manager"
            android:textSize="@dimen/titile_side_text_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_deviceBuy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/device_buy"
            android:textSize="@dimen/titile_side_text_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_wireless_communications"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/wireless_communications"
            android:textSize="@dimen/titile_side_text_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_contactCustomerService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/contact_customer_service"
            android:textSize="@dimen/titile_side_text_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_billDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/bill_detail"
            android:textSize="@dimen/titile_side_text_size"
            android:visibility="gone"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_feedBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/feed_back"
            android:textSize="@dimen/titile_side_text_size"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_signIn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:drawableTop="@drawable/ic_launcher"
        android:text="签到"
        android:textColor="@color/white"
        android:gravity="center_horizontal" />
</LinearLayout>