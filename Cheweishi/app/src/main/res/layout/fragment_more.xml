<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <Button
        android:id="@+id/bt_signDetail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/double_large_marging"
        android:background="@drawable/more_back"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:padding="@dimen/normal_padding"
        android:text="签到详情" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_backgroud" />

    <Button
        android:id="@+id/bt_secretSetting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/large_marging"
        android:background="@drawable/more_back"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:padding="@dimen/normal_padding"
        android:text="隐私设置"
        android:visibility="gone" />

    <Button
        android:id="@+id/fragment_bt_message_push"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/more_back"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:padding="@dimen/normal_padding"
        android:text="消息推送" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_backgroud" />

    <Button
        android:id="@+id/bt_aboutUs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/more_back"
        android:drawableRight="@drawable/right"
        android:gravity="left|center_vertical"
        android:padding="@dimen/normal_padding"
        android:text="关于我们" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_backgroud" />

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_double_large_marging"
        android:background="@drawable/logout_back"
        android:padding="@dimen/normal_padding"
        android:text="退出登录"
        android:textColor="@color/white" />

</LinearLayout>