<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/more_back"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/normal_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_goods_item"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="@dimen/small_marging"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/ll_adapter"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/normal_marging"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goodsName_item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/titile_side_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goodsBrand_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/gray_white"
                    android:textSize="@dimen/item_medium_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goodsNowPayment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="ï¿¥298.00"
                    android:textColor="@color/orange_text_color"
                    android:textSize="@dimen/titile_side_text_size" />

                <TextView
                    android:id="@+id/tv_goodsOrigionalPayment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_marging"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/gray_white"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_goodsDiscount_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/orange_text_color"
        android:textSize="@dimen/title__text_size" />

</LinearLayout>