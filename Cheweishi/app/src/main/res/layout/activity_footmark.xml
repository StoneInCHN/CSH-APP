<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".FootmarkActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/framelayout_footmark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/footmarklinearlayout_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.handmark.pulltorefresh.library.PullToRefreshExpandableListView
                    android:id="@+id/footmark_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_footmark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/main_blue"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingRight="@dimen/normal_padding">

            <Button
                android:id="@+id/left_action_footmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:drawableLeft="@drawable/left"
                android:paddingRight="@dimen/top_left_large_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/titile_side_text_size" />

            <TextView
                android:id="@+id/title_action_footmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/normal_padding"
                android:textColor="@color/orange_text_color"
                android:textSize="@dimen/title__text_size" />

            <TextView
                android:id="@+id/right_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/top_left_large_padding"
                android:visibility="gone"
                android:paddingRight="@dimen/normal_padding"
                android:textColor="@color/orange_text_color"
                android:textSize="@dimen/titile_side_text_size" />
        </RelativeLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/title_tr" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footmark_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>

</LinearLayout>