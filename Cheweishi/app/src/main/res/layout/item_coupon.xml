<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="15dp">


    <LinearLayout
        android:id="@+id/ll_coupon_left"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:background="@drawable/b_item_coupon_pink_left"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_coupon_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="100"
            android:textColor="@color/gray_backgroud"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_coupon_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:text="我是描述信息"
            android:textColor="@color/white_clicked"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_coupon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="截止时间:2016-5-11 13:49:58"
            android:textColor="@color/white_clicked"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_coupon_right"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@drawable/b_item_coupon_pink_right"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_coupon_overtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/b_item_clicked"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_coupon_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88"
            android:textColor="@color/gray_backgroud"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_coupon_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            android:text="领取"
            android:textColor="@color/main_orange"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>