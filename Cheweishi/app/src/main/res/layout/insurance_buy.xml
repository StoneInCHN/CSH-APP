<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_insurance_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/top_left_small_padding">

        <TextView
            android:id="@+id/tv_insurance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_text_light_black"
            android:textSize="@dimen/car_text_large" />

        <TextView
            android:id="@+id/tv_insurance_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_chat_activity"
            android:textColor="@color/gray_pressed"
            android:textSize="@dimen/key_text_small" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_insurance_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/top_left_small_padding"
        android:background="@drawable/insurance_buy_now"
        android:paddingTop="@dimen/normal_padding"
        android:paddingBottom="@dimen/normal_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:text="@string/insurance_buy"
        android:textColor="@color/blue"
        android:textSize="@dimen/titile_side_text_size"></Button>

</LinearLayout>