<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/msgCenterItem_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/msg_item_recheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/msg_item_check"
                    style="@style/messageCenterCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_banben" />

        <LinearLayout
            android:id="@+id/msg_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center_vertical">

                    <LinearLayout
                        android:id="@+id/msg_itm_gone_lin1"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/msg_item_tvred1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mess_dain" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/msg_item_type"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_toRightOf="@+id/rightTime"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="你哈怂哈是不"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/msg_item_tvred2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/mess_dain"
                            android:text="你你水电九局世界级"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/rightTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10：26"
                            android:textColor="@color/messgeitmtvcolor"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/right_cor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/msg_right"
                        android:text="你啊是家啊实打实"
                        android:textColor="@color/messgeitmtvcolor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/msg_itm_gone_lin2"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible"></LinearLayout>

                <TextView
                    android:id="@+id/msgCenterItem_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的扯在什么6：00时候发生的碰撞"
                    android:textColor="@color/messgeitmtvcolor" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.5"
        android:gravity="right|center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="right|center_vertical"></LinearLayout>

        <TextView
            android:id="@+id/mes_item_tvtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.8"
            android:text="你离后果很难"
            android:textColor="@color/messgeitmtvcolor" />
    </LinearLayout>

</FrameLayout>