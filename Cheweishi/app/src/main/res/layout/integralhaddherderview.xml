<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/integral_xlistview_item_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/main_light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/aggregatescore_left_and_top"
                android:layout_marginTop="@dimen/aggregatescore_left_and_top"
                android:text="总积分"
                android:textColor="@color/main_blue"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/integral_imageview_integralhelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/aggregatescore_left_and_top"
                android:src="@drawable/jifen_fujia2x" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/integral_xlistview_item_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center">

            <TextView
                android:id="@+id/integral_xlistview_item_textview_aggregatescore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding"
                android:text="123456789"
                android:textColor="@color/main_blue"
                android:textSize="@dimen/large_textsize" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aggregatescore_left_and_top"
                android:layout_marginTop="@dimen/large_padding"
                android:textColor="@color/text_black_colcor"
                android:text="今日新增"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/integral_tv_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_padding"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/large_padding"
                android:text="321"
                android:textColor="@color/main_blue"
                android:textSize="@dimen/car_text_xlarge" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E1E1E1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_colcor"
                    android:text="里程" />

                <TextView
                    android:id="@+id/integral_tv_note_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:text="311"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginRight="@dimen/large_padding"
                android:background="#E1E1E1"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_colcor"
                    android:text="签到" />

                <TextView
                    android:id="@+id/integral_tv_sign_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:text="10 "
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_light_blue"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/parent_expandable_list_group_padding_left"
            android:layout_marginLeft="@dimen/aggregatescore_left_and_top"
            android:layout_marginTop="@dimen/parent_expandable_list_group_padding_left"
            android:text="积分记录"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</LinearLayout>