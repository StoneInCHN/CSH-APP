<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:orientation="vertical">

    <include
        android:id="@+id/title1"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <requestFocus />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title1"
        android:background="@color/gray_backgroud"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/top_left_small_padding"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/large_marging"
                android:paddingLeft="@dimen/normal_marging"
                android:paddingTop="@dimen/large_marging">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_brand"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/titile_side_text_size" />

                <TextView
                    android:id="@+id/tv_brand_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/double_large_marging"
                    android:drawablePadding="@dimen/small_padding"
                    android:drawableRight="@drawable/weizhang_sanjiao"
                    android:textColor="@color/text_black_colcor"
                    android:textSize="@dimen/titile_side_text_size" />

                <EditText
                    android:id="@+id/et_brand_str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_marging"
                    android:background="@null"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_car_brand"
                    android:inputType="textEmailAddress"
                    android:maxLength="6"
                    android:textColor="@color/text_black_colcor"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/normal_padding"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/large_marging"
                android:paddingLeft="@dimen/normal_marging"
                android:paddingTop="@dimen/large_marging">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frame_number"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/titile_side_text_size" />

                <EditText
                    android:id="@+id/et_frame"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/double_large_marging"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_frame_number"
                    android:maxLength="17"
                    android:textColor="@color/text_black_colcor"
                    android:textSize="@dimen/titile_side_text_size" />

                <ImageButton
                    android:id="@+id/img_frame_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="@dimen/small_padding"
                    android:paddingRight="@dimen/normal_marging"
                    android:src="@drawable/weizhang_shuoming" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/normal_padding"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/large_marging"
                android:paddingLeft="@dimen/normal_marging"
                android:paddingTop="@dimen/large_marging">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/engine_number"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/titile_side_text_size" />

                <EditText
                    android:id="@+id/et_engine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_marging"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="left|center_vertical"
                    android:hint="@string/hint_engine_number"
                    android:textColor="@color/text_black_colcor"
                    android:textSize="@dimen/titile_side_text_size" />

                <ImageButton
                    android:id="@+id/img_engine_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="@dimen/small_padding"
                    android:paddingRight="@dimen/normal_marging"
                    android:src="@drawable/weizhang_shuoming" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/weizhang_tishi"
                android:drawablePadding="@dimen/small_padding"
                android:layout_marginBottom="@dimen/top_left_small_padding"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginTop="@dimen/top_left_small_padding"
                android:text="@string/hint_query_frame"
                android:textColor="@color/red" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <TextView
                android:id="@+id/tv_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_back"
                android:gravity="center"
                android:paddingBottom="@dimen/large_marging"
                android:paddingTop="@dimen/large_marging"
                android:text="@string/go_query"
                android:textColor="@color/main_blue"
                android:textSize="@dimen/titile_side_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/top_left_small_padding"
                android:background="@color/line_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/large_marging"
                android:paddingLeft="@dimen/normal_marging"
                android:paddingTop="@dimen/large_marging"
                android:text="@string/mycar"
                android:textColor="@color/main_blue"
                android:textSize="@dimen/titile_side_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingBottom="@dimen/normal_padding">

                <ListView
                    android:id="@+id/lv_mycar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/white"></ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_addPlate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/title1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_addPlateTopHide"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#b0000000"
            android:orientation="vertical"
            android:visibility="visible"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_plate_choose_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/normal_padding">

                    <Button
                        android:id="@+id/pwd_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:text="@string/cancel"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/pwd_status"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="@string/finish"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/titile_side_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/double_large_marging"
                android:layout_marginTop="@dimen/normal_marging"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.cheweishi.android.widget.WheelView
                    android:id="@+id/passw_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.cheweishi.android.widget.WheelView
                    android:id="@+id/passw_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>