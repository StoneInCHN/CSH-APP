<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_marging"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginRight="@dimen/normal_marging"
                android:layout_marginTop="@dimen/large_marging"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/car_detailes_iv_location"
                        android:layout_width="@dimen/list_item_img"
                        android:layout_height="@dimen/list_item_img"
                        android:src="@drawable/zhaochewei_img" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvcar_detaileslocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black_colcor"
                            android:textSize="@dimen/title__text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.cheweishi.android.widget.FontAwesomeView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/two_dp_padding"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/icon_destination"
                            android:textColor="@color/gray_pressed"
                            android:textSize="@dimen/ttf_twelve"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/car_detailes_xlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/gray_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <com.cheweishi.android.widget.FontAwesomeView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/two_dp_padding"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/icon_arrow"
                            android:textColor="@color/gray_pressed"
                            android:textSize="@dimen/ttf_twelve" />

                        <TextView
                            android:id="@+id/car_detailes_tv_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="0米"
                            android:textColor="@color/gray_pressed"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="营业时间："
                            android:textColor="@color/gray_normal" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_normal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/findcar_button" />

            <LinearLayout
                android:id="@+id/layout_sh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginTop="@dimen/normal_marging"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/icon_find_car"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_sixteen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="车牌号"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:layout_marginLeft="@dimen/park_text_padding"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_marginStart="@dimen/park_text_padding"
                    android:layout_marginTop="@dimen/small_padding">

                    <TextView
                        android:id="@+id/tv_car_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_colcor"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginTop="@dimen/normal_marging"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/icon_wash_order_no"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_sixteen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="订单号"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:layout_marginLeft="@dimen/park_text_padding"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_marginStart="@dimen/park_text_padding"
                    android:layout_marginTop="@dimen/small_padding">

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_colcor"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sh3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginTop="@dimen/normal_marging"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/icon_wash_order"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_sixteen" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="预约时间"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:layout_marginLeft="@dimen/park_text_padding"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_marginStart="@dimen/park_text_padding"
                    android:layout_marginTop="@dimen/small_padding">

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_colcor"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginTop="@dimen/normal_marging"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/icon_wash_store"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_sixteen" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="店铺介绍"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvcar_detailes_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/park_text_padding"
                    android:layout_marginRight="@dimen/park_text_padding"
                    android:layout_marginStart="@dimen/park_text_padding"
                    android:layout_marginTop="@dimen/small_padding"
                    android:textColor="@color/text_black_colcor"
                    android:textSize="@dimen/key_text_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_marging"
                android:layout_marginTop="@dimen/normal_marging"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/icon_net_phone"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_sixteen" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="联系电话"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/titile_side_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:layout_marginLeft="@dimen/park_text_padding"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_marginStart="@dimen/park_text_padding"
                    android:layout_marginTop="@dimen/small_padding">

                    <TextView
                        android:id="@+id/tvcar_detailes_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="phone"
                        android:textColor="@color/text_black_colcor"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_marging"
                android:layout_marginTop="@dimen/double_large_marging"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/car_detailes_lin_yuyue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_weight="0.5"
                    android:background="@drawable/findcar_button_not"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/normal_padding"
                    android:paddingTop="@dimen/normal_padding">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:id="@+id/fav_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:background="@color/white"
                        android:gravity="bottom"
                        android:text="@string/icon_wash_order"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_thirteen" />

                    <TextView
                        android:id="@+id/tv_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yuyue"
                        android:textSize="@dimen/item_content_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_detailes_lin_daozhequ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:layout_marginRight="@dimen/normal_marging"
                    android:layout_weight="0.5"
                    android:background="@drawable/findcar_button_not"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/normal_padding"
                    android:paddingTop="@dimen/normal_padding">

                    <com.cheweishi.android.widget.FontAwesomeView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/two_dp_padding"
                        android:gravity="bottom"
                        android:text="@string/icon_goToThisPlace"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/ttf_thirteen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daozhequ"
                        android:textSize="@dimen/item_content_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>