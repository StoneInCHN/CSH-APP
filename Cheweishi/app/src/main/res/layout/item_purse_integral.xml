<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rel_purse_certificates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_integral_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_padding"
            android:text="今日签到" />

        <TextView
            android:id="@+id/tv_integral_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_integral_time"
            android:layout_alignBottom="@+id/tv_integral_time"
            android:layout_toLeftOf="@+id/tv_integral_time"
            android:layout_marginRight="@dimen/xlarge_marging"
            android:text="+10分" />

        <TextView
            android:id="@+id/tv_integral_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_integral_name"
            android:layout_alignBottom="@+id/tv_integral_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/large_marging"
            android:text="2015-10-11" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_marginLeft="@dimen/normal_padding"
        android:layout_marginRight="@dimen/normal_padding" />

</LinearLayout>
