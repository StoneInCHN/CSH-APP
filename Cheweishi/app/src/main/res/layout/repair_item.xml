<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/normal_padding">

    <ImageView
        android:id="@+id/img_repair_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/normal_marging">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_repair_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:singleLine="true"
                android:text="源丰源机动车检测有限公司"
                android:textSize="@dimen/titile_side_text_size" />

            <ImageView
                android:id="@+id/img_repair_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixiu_phone2x"
                android:paddingLeft="@dimen/double_large_marging" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_repair_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixiu_location2x" />

            <TextView
                android:id="@+id/tv_repair_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_marging"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="源丰源机动车检测有限公司"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/home_car_text_size" />

            <TextView
                android:id="@+id/tv_repair_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离你200米"
                android:textColor="@color/orange_text_color"
                android:textSize="@dimen/key_text_small" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>