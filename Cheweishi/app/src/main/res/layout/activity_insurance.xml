<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".InsuranceActivity">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="@dimen/normal_marging"
                        android:paddingRight="@dimen/normal_marging"
                        android:paddingTop="@dimen/normal_marging"
                        android:src="@drawable/chexian"></ImageView>

                    <TextView
                        android:id="@+id/tv_car_plate_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="爱车生活车险"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/titile_side_text_size" />

                    <TextView
                        android:id="@+id/tv_car_plate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/img_insurance"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/btn_car_plate_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_marging"
                    android:background="@drawable/pay_click_selector"
                    android:paddingBottom="@dimen/small_padding"
                    android:paddingLeft="@dimen/large_padding"
                    android:paddingRight="@dimen/large_padding"
                    android:visibility="invisible"
                    android:paddingTop="@dimen/small_padding"
                    android:text="@string/upload_right_now"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/line_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:text="@string/add_car"
                    android:textColor="@color/gray_pressed"
                    android:textSize="@dimen/titile_side_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/line_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/small_padding"
                    android:paddingLeft="@dimen/normal_padding"
                    android:paddingRight="@dimen/normal_padding"
                    android:paddingTop="@dimen/small_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/insurance_city"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:id="@+id/tv_insurance_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:id="@+id/tv_changeCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/changeCar"
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/small_padding"
                    android:paddingLeft="@dimen/normal_padding"
                    android:paddingRight="@dimen/normal_padding"
                    android:paddingTop="@dimen/small_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brandSeries"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:id="@+id/tv_brandSeries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/small_padding"
                    android:paddingLeft="@dimen/normal_padding"
                    android:paddingRight="@dimen/normal_padding"
                    android:paddingTop="@dimen/small_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/insurance_car"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:id="@+id/tv_insurance_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/small_padding"
                    android:paddingLeft="@dimen/normal_padding"
                    android:paddingRight="@dimen/normal_padding"
                    android:paddingTop="@dimen/small_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carModel"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />

                    <TextView
                        android:id="@+id/tv_insurance_carModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_normal"
                        android:textSize="@dimen/key_text_small" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_insurance_calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/double_large_marging"
                    android:background="@drawable/btn_blue_bg_selector"
                    android:padding="@dimen/normal_padding"
                    android:text="@string/insurance_calculate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titile_side_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>