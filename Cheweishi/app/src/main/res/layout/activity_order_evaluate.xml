<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/normal_marging"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_store_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zhaochewei_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_marging"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wash_user_name"
                            android:textColor="@color/gray_pressed"
                            android:textSize="@dimen/titile_side_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_marging"
                            android:text="天天洗车美容服务中学"
                            android:textSize="@dimen/titile_side_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wash_service_name"
                            android:textColor="@color/gray_pressed"
                            android:textSize="@dimen/titile_side_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_marging"
                            android:text="天天"
                            android:textSize="@dimen/titile_side_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wash_amount"
                            android:textColor="@color/gray_pressed"
                            android:textSize="@dimen/titile_side_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large_marging"
                            android:text="188"
                            android:textColor="#fa858a"
                            android:textSize="@dimen/titile_side_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xlarge_marging"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_marging"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/normal_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/serve_evaluate"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/titile_side_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Good_ecaluate"
                        android:textColor="@color/gray_pressed"
                        android:textSize="@dimen/item_small_text_size" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="5dp"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/small_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_marging"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/serve_skill"
                        android:textSize="@dimen/titile_side_text_size" />

                    <RatingBar
                        android:id="@+id/rtb_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="42px"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:progressDrawable="@drawable/food_rating_bar_full"
                        android:rating="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_marging"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/serve_manner"
                        android:textSize="@dimen/titile_side_text_size" />

                    <RatingBar
                        android:id="@+id/rtb_manner"
                        android:layout_width="wrap_content"
                        android:layout_height="42px"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:progressDrawable="@drawable/food_rating_bar_full"
                        android:rating="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_marging"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/serve_environment"
                        android:textSize="@dimen/titile_side_text_size" />

                    <RatingBar
                        android:id="@+id/rtb_environment"
                        android:layout_width="wrap_content"
                        android:layout_height="42px"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:progressDrawable="@drawable/food_rating_bar_full"
                        android:rating="3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xlarge_marging"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="@dimen/small_padding">

                    <EditText
                        android:id="@+id/ed_orderName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wash_edit"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="@string/order_EdHiht"
                        android:textSize="@dimen/item_small_text_size"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ed_orderName"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <RelativeLayout
                            android:id="@+id/rl_orderphotograph"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@drawable/fillet_background"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img_order_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="3dp"
                                android:layout_toLeftOf="@+id/tv_orderAdd"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:src="@drawable/pingjia_jia2x" />

                            <TextView
                                android:id="@+id/tv_orderAdd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text="@string/order_btnPrint"
                                android:textColor="#2eb3e8" />
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <com.cheweishi.android.widget.UnslidingGridView
                android:id="@+id/gridView_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xlarge_marging"
                android:background="@color/white"
                android:numColumns="5"></com.cheweishi.android.widget.UnslidingGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_marging"
                android:background="@color/white" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_blue"
                android:text="@string/order_comment"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>