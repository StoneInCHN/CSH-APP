<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.cheweishi.android.widget.MarqueeTextView
        android:id="@+id/tv_bussiness_child_insurance_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="@dimen/normal_padding"
        android:singleLine="true"
        android:text="第三者责任险"
        android:textColor="@color/gray_normal"
        android:textSize="@dimen/item_medium_text_size" />

    <TextView
        android:id="@+id/sp_bussiness_child_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/insurance_back"
        android:drawablePadding="@dimen/normal_padding"
        android:drawableRight="@drawable/chexian_down"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding" />

    <TextView
        android:id="@+id/tv_bussiness_child_insurance_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_marging"
        android:ellipsize="marquee"
        android:text="商业险"
        android:textColor="@color/gray_normal"
        android:textSize="@dimen/item_medium_text_size" />

    <LinearLayout
        android:id="@+id/ll_bussiness_child_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/normal_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/normal_padding"
        android:paddingTop="@dimen/normal_padding">

        <CheckBox
            android:id="@+id/cb_bussiness_child_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/insurance_child_check"
            android:clickable="false" />
    </LinearLayout>

</LinearLayout>